<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.justjava.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            style="@style/heading"
            android:text="@string/toppings_label"/>

        <LinearLayout
            style="@style/viewDimens"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/whipped_cream_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/whipped_cream"
                android:textSize="16sp"
                android:paddingLeft="24dp"
                android:paddingStart="24dp"
                android:paddingRight="24dp"
                android:paddingEnd="24dp"/>

            <CheckBox
                android:id="@+id/chocolate_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chocolate"
                android:textSize="16sp"
                android:paddingLeft="24dp"
                android:paddingStart="24dp"
                android:paddingRight="24dp"
                android:paddingEnd="24dp"/>

        </LinearLayout>

        <TextView
            android:text="@string/quantity_label"
            style="@style/heading" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/decrement_button"
                android:text="@string/decrement_button"
                style="@style/inc_dec_button_dimensions"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp" />

            <TextView
                android:id="@+id/quantity_text_view"
                android:text="@string/quantity_text_view"
                android:textSize="16sp"
                android:textColor="@color/primary_text"
                style="@style/viewDimens"
                android:layout_margin="4dp" />

            <Button
                android:id="@+id/increment_button"
                android:text="@string/increment_button"
                style="@style/inc_dec_button_dimensions"
                android:layout_marginRight="4dp"
                android:layout_marginEnd="4dp" />

        </LinearLayout>

        <TextView
            android:text="@string/order_summary_label"
            style="@style/heading" />

        <TextView
            android:id="@+id/order_summary_text_view"
            android:text="@string/order_summary_text_view"
            android:textSize="16sp"
            android:textColor="@color/primary_text"
            style="@style/viewDimens"/>

        <Button
            android:id="@+id/order_button"
            android:text="@string/order_button"
            style="@style/viewDimens"/>

    </LinearLayout>

</ScrollView>
