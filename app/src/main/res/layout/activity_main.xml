<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.justjava.MainActivity"
    android:orientation="vertical">

    <TextView
        android:text="@string/quantityLabel"
        android:textAllCaps="true"
        style="@style/viewDimens" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <Button
            android:text="@string/decrementButton"
            style="@style/inc_dec_button_dimensions"
            android:onClick="decrement"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp" />

        <TextView
            android:id="@+id/quantity_text_view"
            android:text="@string/quantityTextView"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            style="@style/viewDimens"
            android:layout_margin="4dp" />

        <Button
            android:text="@string/incrementButton"
            style="@style/inc_dec_button_dimensions"
            android:onClick="increment"
            android:layout_marginRight="4dp"
            android:layout_marginEnd="4dp" />

    </LinearLayout>

    <TextView
        android:text="@string/priceLabel"
        android:textAllCaps="true"
        style="@style/viewDimens" />

    <TextView
        android:id="@+id/price_text_view"
        android:text="@string/priceTextView"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        style="@style/viewDimens"/>

    <Button
        android:text="@string/orderButton"
        style="@style/viewDimens"
        android:onClick="submitOrder"/>



</LinearLayout>
